<Window x:Class="PR_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="canvas">
        <!-- Triangle -->
        <Polygon Points="100,100 150,150 50,150" Fill="Blue" Stroke="Black" StrokeThickness="2">
            <Polygon.RenderTransform>
                <TranslateTransform x:Name="triangleTransform"/>
            </Polygon.RenderTransform>
        </Polygon>

        <!-- Rectangle -->
        <Rectangle Width="100" Height="100" Fill="Red" Stroke="Black" StrokeThickness="2">
            <Rectangle.RenderTransform>
                <TranslateTransform x:Name="rectangleTransform"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <!-- Circle -->
        <Ellipse Width="100" Height="100" Fill="Green" Stroke="Black" StrokeThickness="2">
            <Ellipse.RenderTransform>
                <TranslateTransform x:Name="circleTransform"/>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Canvas>
</Window>